<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home - <%= user.name %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="styles/main.css">
  </head>
  <body>
    <%- include ("../layout/navbar") %>
    <h1>Hola, <%= user.name %></h1>

    <form action="/upload" method="post" id="formUpload" enctype="multipart/form-data">
      <input type="file" multiple name="photos" id="fileInput" class="d-none" />
      <input type="button" id="bPick" value="Elegir fotos" class="btn btn-primary p-2" />
      <input type="submit" id="bPick" value="Subir fotos" class="btn btn-primary p-2" />
    </form>

    <%- include ("../layout/photo", {photos: photos, albums: albums, origin: "/home"}) %>

    
    <script>
      const fileInput = document.getElementById('fileInput');
      const bPick = document.getElementById('bPick');

      bPick.addEventListener('click', function(e) {
        e.preventDefault();
        fileInput.click();
        document.getElementById('formUpload').submit();
      });

      fileInput.addEventListener('change', function(e) {
        e.preventDefault();
        //document.getElementById('formUpload').submit();
      });
    </script>
  </body>
</html>
